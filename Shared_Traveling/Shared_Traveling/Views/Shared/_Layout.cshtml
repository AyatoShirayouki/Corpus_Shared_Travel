@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shared Traveling</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/customstylesheet.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <div id="form1">
        <div>
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="/Home/Index">
                    <img width="30" height="30" class="img" src="~/images/s.png" />
                    hared
                    <img width="30" height="30" class="img" src="~/images/t.png" />
                    raveling
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapsed navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>
                        @if (this.Context.Session.GetString("loggedUser") != null)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="/TravelPost/Aplications">My Requests</a>
                            </li>
                        }
                        </ul>
                    <ul class="navbar-nav">
                        @if (this.Context.Session.GetString("loggedUser") == null)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/Login">Login</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/SignUp">Sign Up</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="/Users/Index">
                                    Hello 
                                    @this.Context.Session.GetString("LoggedUserUsername")
                                </a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/TravelPost/Index">My Posts</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/Logout">Logout</a>
                            </li>
                        }

                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
