@model Shared_Traveling.ViewModels.TravelPosts.AplicationVM
@using Microsoft.AspNetCore.Http;
@using Shared_Traveling.Entities
@using System.Linq
@{
    ViewData["Title"] = "Aplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="//datatables.net/download/build/nightly/jquery.dataTables.css" rel="stylesheet" type="text/css" />
<script src="//datatables.net/download/build/nightly/jquery.dataTables.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

<section class="jumbotron text-center" style="opacity: 0.9">
    <div class="container">
        <h1 class="jumbotron-heading" style=" color: #111; font-family: 'Helvetica Neue', sans-serif; font-size: 100px; font-weight: bold; letter-spacing: -1px; line-height: 1; text-align: center;">My Travel Requests</h1>
    </div>
</section>

<div class="row">
    <div class="col-5"></div>
    <div class="col-2">
        <center>
            <a href="/TravelPost/MyApprovedRequests">
                <button class="btn btn-primary btn-block btn-lg">My Approved Requests</button>
            </a>
        </center>
    </div>
    <div class="col-5"></div>
</div>
<br />
<br />

<div class="row">
    <div class="col-3">

    </div>
    <div class="col-6">
        <table id="myTable" class="borderless-table">
            <thead>
                <tr>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null)
                {
                    @foreach (TravelPost item in Model.Items)
                    {
                        <tr>
                            <td>
                                <div class="card">
                                    <div class="card-header">
                                        @foreach (User u in Model.Users)
                                        {
                                            if (u.Id == item.UserId)
                                            {
                                                <span>@u.FirstName @u.LastName (@u.Username)</span>
                                            }
                                        }
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            @item.CityOfDeparture (@item.HourOfDeparture) - @item.CityOfDestination (@item.HourOfDestination)<br />
                                            Available Seats: @item.AvailableSeats
                                        </h5>
                                        <p class="card-text">
                                            <strong>Address of departure</strong>: @item.AddressOfDeparture<br />
                                            <strong>Address of destination</strong>: @item.AddressOfDestination<br />
                                            <strong>Price</strong>: @Math.Round(item.Price, 2) leva
                                        </p>
                                    </div>
                                </div>
                                <br />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>

    <div class="col-3">

    </div>
</div>

<script>
    window.
        onload
        = function () {
            Particles.
                init
                ({
                    selector:
                        '.background'
                });
        };
    var particles = Particles.init({
        selector: '.background',
        color: ['#DA0463', '#404B69', '#DBEDF3'],
        connectParticles: true
    });
</script>
<canvas class="background"></canvas>

